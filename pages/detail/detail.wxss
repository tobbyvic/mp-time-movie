.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}

.wrapper {
  background-color: #ffffff;
}

/* 顶部的大图和小图 */
.img-wrapper {
  position: relative;
}

.img-wrapper image {
  width: 240rpx;
  height: 320rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 50%);
}

.rating-icon {
  position: absolute;
  bottom: 160rpx;
  left: 50%;
}

.image-person {
  width: 100%;
}

.desc-text {
  font-size: 14px;
  color: #707070;
}

.padding {
  padding: 12rpx
}

.actor-list {
  overflow-y: hidden;
  overflow-x: auto;
  display: flex;
  height: 432rpx;
}

.actor-item {
  display: inline-flex;
  flex-flow: column;
  width: 240rpx;
  height: 400rpx;
  line-height: 40rpx;
  flex: none;
  margin-right: 10rpx;
}

.movie-list {
  overflow-y: hidden;
  overflow-x: auto;
  display: flex;
  height: 360rpx;
}

.movie-item {
  display: inline-flex;
  flex-flow: column;
  width: 640rpx;
  height: 360rpx;
  flex: none;
  margin-right: 10rpx;
}

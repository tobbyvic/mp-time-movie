/* pages/face/face.wxss */
/* 遮罩 */
.shadow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    opacity: .5;
    background: #000000;
  }
  
  /* 内容 */
  .content {
    display: flex;
    flex-flow: column;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
  }
  
  /* 头像canvas */
  .avatar-canvas {
    width: 300px;
    height: 300px;
  }